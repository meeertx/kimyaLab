{
  "name": "kimyalab-backend",
  "version": "1.0.0",
  "description": "KimyaLab Backend API Server - Firebase'den Node.js'e geçiş",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "categories:check": "tsx scripts/clean-categories.ts check",
    "categories:clean": "tsx scripts/clean-categories.ts clean",
    "production:setup": "npm run db:generate && npm run build && npm run db:migrate:deploy && npm run db:seed",
    "production:build": "npm run type-check && npm run lint && npm run build",
    "production:deploy": "npm run production:build && npm run production:setup",
    "production:start": "NODE_ENV=production node dist/index.js",
    "healthcheck": "curl -f http://localhost:8080/health || exit 1",
    "logs": "tail -f logs/production.log",
    "clean": "rm -rf dist && rm -rf node_modules/.cache"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "prisma": "^5.6.0",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "streamifier": "^0.1.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@types/streamifier": "^0.1.2",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "kimyalab",
    "chemistry",
    "laboratory",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "prisma"
  ],
  "author": "KimyaLab Team",
  "license": "MIT",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
